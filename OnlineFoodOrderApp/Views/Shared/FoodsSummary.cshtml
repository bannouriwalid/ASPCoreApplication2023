@using System.Globalization
@model Food
<style>
    .panel {
        border: 1px solid #eaeaec;
        margin: -1px 19px 3px -1px;
        box-shadow: 0 1px 2px rgba(0, 0, 0, 0.05);
        background-color: #FAFAFA;
        padding: 15px;
        border-radius: 5px;
    }

    .panel img {
        height: 300px; /* Set a fixed height for the image container */
        width: 300px;
       
    }
</style>

<div class="col-md-3">
    <form method="post">
        <div class="panel">
            <img src="~/@Model.ImageUrl" class="img-fluid" alt="" style="border-radius: 10px">
            <h4 class="text-primary">@Model.Name</h4>
            <h6 class="text-dark">@Model.ShortDescription</h6>
            <h5 class="text-danger">@Model.Price.ToString(CultureInfo.InvariantCulture) TND</h5>
            <input type="hidden" name="hidden_name" value="@Model.Name">
            <input type="hidden" name="hidden_price" value="@Model.Price">
            <a class="btn btn-danger" id="cartDetail" asp-controller="Food" asp-action="Details" asp-route-foodId="@Model.FoodId">
                <span class="glyphicon glyphicon-eye-open"></span>
                Detail
            </a>
            <a class="btn btn-success" id="cartAdd" asp-controller="ShoppingCart" asp-action="AddToShoppingCart" asp-route-foodId="@Model.FoodId">
                <span class="glyphicon glyphicon-shopping-cart"></span>
                Add to Cart
            </a>
        </div>
    </form>
</div>
