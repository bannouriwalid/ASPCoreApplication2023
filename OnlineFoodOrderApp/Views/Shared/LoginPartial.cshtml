@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager

@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="" asp-controller="Account" asp-action="Logout" id="logoutForm"
          method="post" class="navbar-right">
            <li class="nav-item active" style="padding-right: 20px">
                <a class="nav-item nav-link" href="javascript:document.getElementById('logoutForm').submit()">
                    <span class="glyphicon glyphicon-log-out"></span>
                    Log out
                </a>
            </li>
    </form>
}
else
{
        <li class="nav-item active">
            <a class="nav-item nav-link" id="registerLink" asp-controller="Account" asp-action="Register">
                <span class="glyphicon glyphicon-pencil"></span>
                Register
            </a>
        </li>
        <li class="nav-item active">
            <a class="nav-item nav-link" id="loginLink" asp-controller="Account" asp-action="Login">
                <span class="glyphicon glyphicon-log-in"></span>
                Log in
            </a>
        </li>
    
}