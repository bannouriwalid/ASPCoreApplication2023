@model Order

<style>
    body {
               background-image: url('@Url.Content("~/images/aboutus.jpg")');
               background-repeat: no-repeat;
               background-size: cover;
        }
</style>

<div class="row orderForm ">
    <h3 class="text-center" style="color:white;font-size: 40px;text-align: center;margin-left: 75px">You are just one step away from ordering your foods.</h3>
    <br>

    <div class="col-md-5 col-md-offset-4">
        <div class="panel panel-primary">
            <div class="panel-heading"> Order </div>
            <div class="panel-body" style="padding: 20px">
                <form asp-action="Checkout" method="post" class="form-horizontal" role="form">
                    <div class="row">
                        <div class="form-group col-xs-12">
                            <label asp-for="LastName" class="col-md-2 control-label"></label>
                            <div class="col-md-5">
                                <input asp-for="LastName" class="form-control" style="width: 350px;"/>
                                <span asp-validation-for="LastName" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-xs-12">
                            <label asp-for="FirstName" class="col-md-2 control-label"></label>
                            <div class="col-md-5">
                                <input asp-for="FirstName" class="form-control" style="width: 350px;"/>
                                <span asp-validation-for="FirstName" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-xs-12">
                            <label asp-for="AddressLine" class="col-md-2 control-label"></label>
                            <div class="col-md-5">
                                <input asp-for="AddressLine" class="form-control" style="width: 350px;"/>
                                <span asp-validation-for="AddressLine" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-xs-12">
                            <label asp-for="State" class="col-md-2 control-label"></label>
                            <div class="col-md-5">
                                <input asp-for="State" class="form-control" style="width: 350px;"/>
                                <span asp-validation-for="State" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <br>
                    <div class="row">
                        <div class="form-group col-xs-12">
                            <label asp-for="PhoneNumber" class="col-md-2 control-label"></label>
                            <div class="col-md-5">
                                <input asp-for="PhoneNumber" class="form-control" style="width: 350px;"/>
                                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-xs-12">
                            <label asp-for="Email" class="col-md-2 control-label"></label>
                            <div class="col-md-5">
                                <input asp-for="Email" class="form-control" style="width: 350px;"/>
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    @if (!ViewData.ModelState.IsValid)
                    {
                        <div class="alert alert-danger">
                            <ul>
                                @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                                {
                                    <li>@error.ErrorMessage</li>
                                }
                            </ul>
                        </div>
                    }
                    <div class="form-group" style="padding-left:100px;padding-top: 30px">
                        <a asp-controller="ShoppingCart" asp-action="Index" class="btn btn-warning">
                            <span class="glyphicon glyphicon-shopping-cart"></span>
                            go back to cart
                        </a>
                        <input type="submit" value="Complete order" class="btn btn-success" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>